{#
/**
 * @file
 * Theme override for a view template to display an accordion of rows.
 *
 * Available variables:
 * - attributes: HTML attributes for the container.
 * - rows: A list of rows for this accordion.
 *   - attributes: The row's HTML attributes.
 *   - content: The row's contents.
 * - title: The title of this group of rows. May be empty.
 *
 * @see template_preprocess_uikit_view_accordion()
 */
#}
{{ attach_library('uikit/uikit.accordion') }}
{% if title %}
  <h3>{{ title }}</h3>
{% endif %}

<div{{ accordion_attributes }}>
  {% for row in items %}
    <h3 class="{{ accordion_toggle }}">{{ row.title }}</h3>
    <div class="{{ accordion_container }}">{{ row.content }}</div>
  {% endfor %}
</div>
